{
  "name": "notes-summariser",
  "version": "1.0.0",
  "description": "AI-powered meeting notes summarizer and sharer",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install --legacy-peer-deps",
    "start": "node server/index.js"
  },
  "keywords": [
    "ai",
    "summarizer",
    "meeting-notes",
    "fullstack",
    "github-ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@azure-rest/ai-inference": "^1.0.0-beta.6",
    "@azure/core-auth": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
